{# Icons #}
{% macro get(name) %}
  {% set icons = {
    'email': email(),
    'twitter': twitter(),
    'github': github(),
    'codepen': codepen(),
    'list': list(),
    'newtab': newtab(),
  } %}

  {{ icons[name] }}
{% endmacro %}


{% macro svg(name, viewbox) %}
  <svg
    version="1.1"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="{{ viewbox or '0 0 19 19'}}"
    width="19px"
    height="19px"
    data-icon{% if name %}="{{ name }}"{% endif %}
    >
    {{ caller() }}
  </svg>
{% endmacro %}


