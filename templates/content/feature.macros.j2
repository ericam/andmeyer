{% import 'utility.macros.j2' as utility %}
{% import 'content/macros.j2' as content %}


{% macro show(
  slugs
) %}
  <nav data-layout="feature">
    {% for slug in slugs %}
      {{ item(slug|get_config) }}
    {% endfor %}
  </nav>
{% endmacro %}


{% macro item(
  page
) %}
  {% if page %}
    <a href="{{ content.page_link(page) }}" class="feature">
      {{ page.title|typogrify }}
    </a>
  {% endif %}
{% endmacro %}
