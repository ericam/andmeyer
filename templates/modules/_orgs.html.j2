{% import "modules/macros.j2" as mod %}
{% import "modules/org.macros.j2" as organization %}


{% set type = 'feature' if (module.type == 'feature') else 'list' %}
{% set orgs = config.feature_orgs if (type == 'feature') else config.orgs %}


{% if orgs %}
  {% call mod.section(
    slug=['orgs', type]|join('-')
  ) %}

    <h2 class="section-title">
      {{ module.title or 'Co-Belligerents' }}
    </h2>

    {% for org in orgs %}
      {% if type == 'feature' %}
        {{ organization.feature(org) }}
      {% else %}
        {{ organization.list(org) }}
      {% endif %}
    {% endfor %}

  {% endcall %}
{% endif %}
