{% import "modules/event.macros.html.j2" as calendar %}

{% set events = config.past if module.time == 'past' else config.future %}

{% if events %}
<section class="section future">
<div class="container">
  <h1 class="section-title">the {{ module.time }}</h1>

  {% for event in events %}
    {{ calendar.show(event) }}
  {% endfor %}
</div>
</section>
{% endif %}
