{% import "modules/event.macros.html.j2" as e %}

{% if config.events and (config.show_events == 'future' or config.show_events == 'all') %}
<section class="section section--cal">
  <h2 class="cal-title">Upcoming Events</h2>
  {% for event in config.events %}
    {{ e.show(event) }}
  {% endfor %}

  {% if config.show_events == 'future' %}
    <a href="/when/" class="history-link">past events Â»</a>
  {% endif %}
</section>
{% endif %}

{% if config.cv and (config.show_events == 'past' or config.show_events == 'all') %}
<section class="section section--cv">
  <h2 class="cal-title">Past Events</h2>
  {% for event in config.cv %}
    {{ e.show(event) }}
  {% endfor %}
</section>
{% endif %}
