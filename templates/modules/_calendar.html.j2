{% import "modules/event.macros.j2" as calendar %}

{% set events = config.past if module.time == 'past' else config.future %}

{% if events %}
<section data-module="calendar">
<div class="container">
  <h2 class="section-title">
    {{ module.title or ['the', module.time]|join(' ') }}
  </h2>

  {% for event in events %}
    {{ calendar.show(event) }}
  {% endfor %}
</div>
</section>
{% endif %}
