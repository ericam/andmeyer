{% if config.press %}
<section class="section press">
<div class="container">
  <h2 class="section-title">Other News</h2>

  {% for item in config.press %}
    <blockquote class="clipping">
      <p class="quote">{{ item.quote|safe }}</p>
      <p class="citation">
        {{ item.credit }},
        <a href="{{ item.url }}">{{ item.source }}</a>
        <time datetime="{{ item.datetime }}" class="pubdate">[{{ item.date }}]</time>
      </p>
    </blockquote>
  {% endfor %}
</div>
</section>
{% endif %}
