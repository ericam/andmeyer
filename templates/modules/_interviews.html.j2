{% import "modules/utility.macros.j2" as utility %}

{% if config.interviews %}
<section class="interviews module">
<div class="container">
  <h2 class="section-title">Interviews</h2>

  {% for item in config.interviews %}
    <div class="interview">
      <h3 class="interview-title">
        <strong class="source">{{ utility.link(item.source, item.url) }}:</strong>
        <span class="subject">{{ item.title }}</span>
      </h3>
      <div class="citation">
        {{ item.credit }}
        <time datetime="{{ item.datetime }}" class="pubdate">[{{ item.date }}]</time>
      </div>
    </div>
  {% endfor %}
</div>
</section>
{% endif %}
