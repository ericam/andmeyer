{% import "utility.macros.j2" as utility %}


{% macro figure(
  gallery,
  caption=none,
  section=none,
  type='image'
) %}
  {% if gallery|length %}
    {% if section %}
      <hr data-layout="grid-border" />

      {% if caption %}
        <h2 data-title="section">
          {{ caption|typogrify }}
        </h2>
      {% endif %}
    {% endif %}

    <figure data-gallery="{{ type }}">
      {% if caption and not section %}
        <figcaption data-title="gallery">
          {{ caption|typogrify }}
        </figcaption>
      {% endif %}

      {% for item in gallery %}
        {{ object(item, type) }}
      {% endfor %}
    </figure>
  {% endif %}
{% endmacro %}


{% macro object(
  item,
  type='image'
) %}
  {% set item_type = 'video' if item.video else (type or 'image') %}
  {% set item_type = 'music' if item.music else item_type %}
  {% set size = utility.attr_if('data-size', item.size) %}

  {% if item_type == 'image' %}
    {{ utility.link_if(
      url=item.link,
      content=img(item.image, item.alt),
      attrs={'data-size': item.size}
    ) }}
  {% elif item_type == 'video' %}
    <div class="video" {{ size }}>
      {{ item.video|safe }}
    </div>
  {% elif item_type == 'music' %}
    <div class="music" {{ size }}>
      {{ item.music|safe }}
    </div>
  {% endif %}
{% endmacro %}


{% macro img(
  image,
  alt=''
) %}
  <img src="/static/pictures/{{ image }}" alt="{{ alt or '' }}" class="gallery-image" />
{% endmacro %}
