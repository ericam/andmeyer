{% import "utility.macros.j2" as utility %}
{% import "icon.macros.j2" as icon %}
{% import "content/macros.j2" as content %}


{% macro recent_posts(
  title="Recent Articles",
  count=5
) %}
  {% set entries = get_some_recent_blog_entries(count) %}

  {% if entries|length %}
    {{ section(entries, title) }}
  {% endif %}
{% endmacro %}


{% macro taglist(
  tag,
  title="Related Articles",
  count=5,
  reverse=false
) %}
  {% set entries = get_blog_entries_by_tag(tag) %}
  {% set entries = entries|reverse if (entries and reverse) else entries %}

  {% if entries %}
    {{ section(entries[:count], title) }}
  {% endif %}
{% endmacro %}


{% macro section(
  entries,
  title=none
) %}
  {% if title %}
    <h2 data-title="section">
      <span>{{ title|typogrify }}</span>
    </h2>
  {% endif %}

  {% for entry in entries %}
    {{ list(entry) }}
  {% endfor %}
{% endmacro %}


{% macro list(post) %}
  <h3 data-title="post">
    {{ utility.link_if(
      content=post.title|typogrify,
      url=link_to('page', slug=post.slug)
    ) }}
  </h3>

  {{ byline(post, 'post') }}

  <div data-summary="post">
    {{ post.render_summary()|typogrify }}
  </div>
{% endmacro %}


{% macro byline(
  post,
  type='rst'
) %}
  <div data-byline="{{ type }}">
    {{ pubdate(post.pub_date) }}
    {{ meta(post) }}
  </div>
{% endmacro %}


{% macro meta(post) %}
  {% set series = post.config.series %}

  {% if series %}
    {% set series_url = ['/tags/', series|urlencode, '/']|join %}
    {% set series_page = post.config.series_pages|selectattr('title', 'equalto', series)|list %}
    {% set series_url = series_page[0].url if series_page[0] else series_url %}
    <span data-meta="in">
      <i>in</i>
      {{ utility.link_if(series|typogrify, series_url) }}
    </span>
  {% endif %}

  {% set away = post.config.elsewhere[0] if post.config.elsewhere else none %}
  {% if away %}
    <span data-meta="on">
      <i>on</i>
      {{ utility.link_if(away.src|typogrify, away.url) }}
    </span>
  {% endif %}
{% endmacro %}


{% macro pubdate(pub_date) %}
  {% if pub_date %}
    <time datetime="{{ pub_date.isoformat() }}"
      pubdate="pubdate"
      data-meta='time'>
      {{ pub_date.strftime("%B %d, %Y") }}
    </time>
  {% endif %}
{% endmacro %}


{% macro tags(taglist) %}
  {% if taglist %}
    <span data-meta="tags">
      <i>in</i>
      {% for tag in taglist|sort(case_sensitive=true) %}
        {%- if not loop.first %}, {% endif -%}
        <a href="{{ link_to('tag', tag=tag) }}" rel="tag">{{ tag }}</a>
      {%- endfor %}
    </span>
  {% endif %}
{% endmacro %}


{% macro intro(
  title, 
  summary=none, 
  elsewhere=none, 
  hide_title=none
) %}
  <div data-layout="intro" data-align="full" data-grid="full">
    <h1 data-align="center"
      class="page-title{{ ' is-hidden' if hide_title else '' }}">
      {{ title|typogrify }}
    </h1>

    {% if summary %}
      <aside class="summary" data-align="center">
        {{ summary|typogrify }}

        {% if elsewhere %}
          {% set where = elsewhere[0] %}
          {% set text = ['Read More on ', where.src]|join %}
          {{ content.btn(where.url, text) }}
        {% endif %}
      </aside>
    {% endif %}

    <hr data-layout="grid-border" />
  </div>
{% endmacro %}


{% macro hero(
  image
) %}
  {% if image %}
    <figure data-layout="hero" data-align="full" data-grid="full">
      <img src="/static/pictures/{{ image.src }}"
        alt="{{ image.alt or '' }}"
        data-align="center-left"
        class="hero-image">
      {% if image.caption %}
        <figcaption class="hero-caption" data-align="right-edge">
          <span class="caption-wrap">{{ image.caption|typogrify }}</span>
        </figcaption>
      {% endif %}
    </figure>
  {% endif %}
{% endmacro %}


{% macro render(
  byline=none,
  fragment=none,
  config=none
) %}
  {%- for module in config.before -%}
    {% include module.include %}
  {%- endfor -%}

  {{ byline or '' }}

  {% if fragment %}
    {% if config.erasure %}
      <input type="checkbox" id="erasure">
    {% endif %}

    <div data-layout="{{ 'grid' if config.grid else 'rst' }}"
      {{ utility.attr_if('data-erasure', config.erasure) }} >

      {% if config.tagline %}
        <h2 class="page-tagline">{{ config.tagline|typogrify }}</h2>
      {% endif %}

      {{ fragment|typogrify }}
    </div>
  {% endif %}

  {%- for module in config.after -%}
    {% include module.include %}
  {%- endfor -%}
{% endmacro %}