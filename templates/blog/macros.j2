{% macro list(post) %}
<article data-module="blog-post">
  {% if post.title %}
    <h2>
      <a href="{{ link_to('page', slug=post.slug) }}">
        {{ post.title }}
      </a>
    </h2>
  {% endif %}

  {{ byline(post) }}

  {%- if post.config.image -%}
    {% set image = post.config.image[0] %}
    <img
      src="/static/pictures/{{ image.src }}"
      alt="{{ image.alt }}"
      utility.attr_if('style', image.style) />
  {%- endif -%}

  {% if post.summary %}
    {{ post.render_summary() }}
  {% endif %}
</article>
{% endmacro %}

{% macro byline(post) %}
<div class="byline">
  {{ pubdate(post.pub_date) }}
  {# tags(post.tags) #}
</div>
{% endmacro %}

{% macro pubdate(pub_date) %}
  {% if pub_date %}
    {% if pub_date %}
    <time datetime="{{ pub_date.isoformat() }}" pubdate="pubdate">
      {{ pub_date.strftime("%B %d, %Y") }}
    </time>
    {% endif %}
  {% endif %}
{% endmacro %}

{% macro tags(taglist) %}
  {% if taglist %}
    in
    <span class="tags">
      {% for tag in taglist|sort(case_sensitive=true) %}
        {%- if not loop.first %}, {% endif -%}
        <a href="{{ link_to('tag', tag=tag) }}" rel="tag">{{ tag }}</a>
      {%- endfor %}
    </span>
  {% endif %}
{% endmacro %}
