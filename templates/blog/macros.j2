{% macro list(post) %}
<article class="post">
<div class="container">
  <header class="post-header">
    {% if post.title %}
      <h1 class="title">
        <a href="{{ link_to('page', slug=post.slug) }}">
          {{ post.title }}
        </a>
      </h1>
    {% endif %}

    {{ byline(post) }}
  </header>

  <div class="post-body">
    {% if post.summary %}
      {{ post.render_summary() }}
      <a href="{{ link_to('page', slug=post.slug) }}" class="more-link">
        read more Â»
      </a>
    {% else %}
      {{ post.render_contents() }}
    {% endif %}
  </div>
</div>
</article>
{% endmacro %}

{% macro byline(post) %}
{% if post.pub_date %}
<div class="byline">
  {% if post.pub_date %}
  <time datetime="{{ post.pub_date.isoformat() }}" pubdate="pubdate">
    {{ post.pub_date.strftime("%B %d, %Y") }}
  </time>
  {% endif %}
</div>
{% endif %}
{% endmacro %}
